{
  "presets": ["next/babel"],
  "ignore": ["node_modules"],
  "plugins": [
    [
      "import",
      {
        "libraryName": "antd",
        "libraryDirectory": "lib",
        "style": true
      }
    ],
    [
      "module-resolver",
      {
        "alias": {
          "atoms": "./src/components/atoms",
          "molecules": "./src/components/molecules",
          "organisms": "./src/components/organisms",
          "templates": "./src/components/templates",
          "reduxHelper": "./src/reduxHelper",
          "forms": "./src/forms",
          "utils": "./src/utils",
          "api": "./src/api"
        }
      }
    ]
  ]
}
